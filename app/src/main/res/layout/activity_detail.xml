<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detail_id"
        android:padding="10dp"
        android:background="@drawable/inputs"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:inputType="text"
        android:hint="Id"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="17sp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:visibility="invisible"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detail_name"
        android:padding="10dp"
        android:layout_below="@+id/detail_id"
        android:background="@drawable/inputs"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:inputType="text"
        android:hint="Name"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="17sp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:visibility="invisible"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detail_email"
        android:padding="10dp"
        android:layout_below="@+id/detail_name"
        android:background="@drawable/inputs"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:inputType="text"
        android:hint="Email"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="17sp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:visibility="invisible"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detail_phone"
        android:padding="10dp"
        android:layout_below="@+id/detail_email"
        android:background="@drawable/inputs"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:inputType="text"
        android:hint="Email"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="17sp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:visibility="invisible"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detail_update"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/button"
        android:padding="3dp"
        android:layout_below="@+id/detail_phone"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:text="Update"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detail_delete"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/button"
        android:padding="3dp"
        android:layout_below="@+id/detail_update"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:text="Delete"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detail_call"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/button"
        android:padding="3dp"
        android:layout_below="@+id/detail_delete"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:text="Call"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detail_sms"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/button"
        android:padding="3dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/detail_call"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:text="SMS"
        android:textSize="18sp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detail_doemail"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/button"
        android:padding="3dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/detail_sms"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:text="Email"
        android:textSize="18sp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detail_doaction"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/button"
        android:padding="3dp"
        android:layout_below="@+id/detail_doemail"
        android:textAllCaps="false"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/white"
        android:text="Action"
        android:textSize="18sp"
        />

</RelativeLayout>